<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInstructionToWriteTheRighPlaceToChose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginComponent"
        android:text="@string/instructionToWriteThePlaceToChose"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/etPlacesToBeChosen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:hint="@string/hintPlaceText"
            android:imeOptions="actionDone"/>

        <Button
            android:id="@+id/bChosePlaces"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:text="@string/buttonToChosePlace"
            android:autoSizeTextType="uniform"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <ListView
            android:id="@+id/lvPlacesChosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center">

        </ListView>

    </LinearLayout>

</LinearLayout>